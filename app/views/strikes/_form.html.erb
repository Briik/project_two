<form action="/countries/<%= @country.id %>/strikes" method="post">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <div class="form-group">
        <label for="strike[target_id]">Target:</label>
        <select name="strike[target_id]">
            <% @targets.each do |target| %>
            <option value="<%= target.id %>"><%= target.name %></option>
            <% end %>
        </select>
    </div>

    <div class="checkbox">
        <label for="strike[airstrike]"><input name="strike[airstrike]" type="checkbox">
            Airstrike?</label>
    </div>

    <div class="form-group">
        <label for="strike[date]">Date:</label>
        <input name="strike[date]" value="<%= @strike.date %>">
    </div>

    <div class="form-group">
        <label for="strike[time]">Time (use 24 hour military time, exe: 0000 or 1200):</label>
        <input name="strike[time]" value="<%= @strike.time %>">
    </div>

    <div class="form-group">
        <label for="strike[area]">Approximate Location:</label>
        <select name="strike[area]">
            <option value=>
                <% Region.all.each do |region| %>
                <option value="<%= region.name %>"><%= region.name %></option>
                <% end %>
            </div>

            <div class="form-group">
                <input type="submit" value="Create">
            </div>
        </form>
