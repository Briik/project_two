<h2>Register a Nation-Militant Group Relationship</h4>

<form action="/relations" method="post">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <div class="form-group">
        <label for="relation[country_id]">Nation-State:</label>
        <select name="relation[country_id]">
            <% @countries.each do |country| %>
            <option value="<%= country.id %>"><%= country.name %></option>
            <% end %>
        </select>
    </div>

    <div class="form-group">
        <label for="relation[target_id]">Militant Group:</label>
        <select name="relation[target_id]">
            <% @targets.each do |target| %>
            <option value="<%= target.id %>"><%= target.name %></option>
            <% end %>
        </select>
    </div>

    <div class="checkbox">
        <label for="relation[allies]"><input name="relation[allies]" type="checkbox">
            Are they Allies? (Check if yes)</label>
    </div>

    <div class="checkbox">
        <label for="relation[coordination]"><input name="relation[coordination]" type="checkbox">
            Are they coordinating? (Check if yes)</label>
    </div>

    <div class="checkbox">
        <label for="relation[enemies]"><input name="relation[enemies]" type="checkbox">
            Are they Enemies? (Check if these groups are at odds)</label>
    </div>

            <div class="form-group">
                <input type="submit" value="Create">
            </div>
        </form>
